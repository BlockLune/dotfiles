//
// BlockLune's Zed Keymap
//
[
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-l": "workspace::ActivatePaneRight"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-/": "workspace::ToggleBottomDock"
    }
  },
  {
    "context": "Terminal && os == macos",
    "bindings": {
      "cmd-t": "workspace::NewTerminal"
    }
  },
  {
    "context": "Terminal && os != macos",
    "bindings": {
      "alt-t": "workspace::NewTerminal"
    }
  },
  {
    "context": "GitPanel",
    "bindings": {
      "ctrl-g": "git_panel::ToggleFocus"
    }
  },
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "space e": "project_panel::ToggleFocus",
      "a": "project_panel::NewFile",
      "c": "project_panel::Copy",
      "d": "project_panel::Delete",
      "l": "project_panel::Open",
      "p": "project_panel::Paste",
      "r": "project_panel::Rename",
      "x": "project_panel::Cut",
      "y": "workspace::CopyPath"
    }
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      "j k": "vim::NormalBefore"
    }
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      // Files
      "space space": "file_finder::Toggle",
      "space f f": "file_finder::Toggle",
      "space /": "pane::DeploySearch",
      "space f g": "pane::DeploySearch",
      "space e": "project_panel::ToggleFocus",

      // Terminal
      "ctrl-/": "terminal_panel::ToggleFocus",

      // Hover
      "shift-k": "editor::Hover",

      // Tabs
      "shift-h": "pane::ActivatePreviousItem",
      "shift-l": "pane::ActivateNextItem",
      "space b d": "pane::CloseActiveItem",
      "space b o": "pane::CloseOtherItems",

      // Panes
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-l": "workspace::ActivatePaneRight",
      "space |": "pane::SplitRight",
      "space -": "pane::SplitDown",

      // Diagnostics
      "space s d": "diagnostics::Deploy",
      "space d": "editor::Hover",
      "space shift-d": "diagnostics::Deploy",
      "[ d": "editor::GoToPreviousDiagnostic",
      "] d": "editor::GoToDiagnostic",
      "[ e": "editor::GoToPreviousDiagnostic",
      "] e": "editor::GoToDiagnostic",
      "[ w": "editor::GoToPreviousDiagnostic",
      "] w": "editor::GoToDiagnostic",

      // Code
      "space c a": "editor::ToggleCodeActions",
      "space c f": "editor::Format",
      "space c r": "editor::Rename",
      "space c s": "outline_panel::ToggleFocus",

      // Git
      "ctrl-g": "git_panel::ToggleFocus",
      "[ c": "editor::GoToPreviousHunk",
      "] c": "editor::GoToHunk",
      "space g h p": "editor::ToggleSelectedDiffHunks",
      "space g h s": "git::StageAndNext", // Why next?
      "space g h r": "git::UnstageAndNext" // Why next?
    }
  }
]
