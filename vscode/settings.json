{
  "colorize.include": [
    "**/*.css",
    "**/*.scss",
    "**/*.sass",
    "**/*.less",
    "**/*.styl",
    "**/*.js",
    "**/*.mjs",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "**/*.vue"
  ],
  "colorize.languages": [
    "css",
    "sass",
    "scss",
    "less",
    "postcss",
    "sss",
    "stylus",
    "xml",
    "svg",
    "javascript",
    "vue",
    "typescript"
  ],
  "editor.accessibilitySupport": "off",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorSurroundingLines": 8,
  "editor.fontFamily": "'FiraCode Nerd Font'",
  "editor.fontLigatures": true,
  "editor.fontSize": 16,
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": "active",
  "editor.inlayHints.enabled": "offUnlessPressed",
  "editor.rulers": [80, 120],
  "editor.stickyScroll.enabled": true,
  "editor.tabSize": 4,
  "explorer.confirmDelete": false,
  "extensions.ignoreRecommendations": true,
  "files.autoGuessEncoding": true,
  "files.autoSave": "onFocusChange",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "vim.camelCaseMotion.enable": true,
  "vim.easymotion": false,
  "vim.history": 200,
  "vim.hlsearch": true,
  "vim.ignorecase": true,
  "vim.incsearch": true,
  "vim.insertModeKeyBindings": [{ "before": ["j", "k"], "after": ["<esc>"] }],
  "vim.leader": "<space>",
  "vim.normalModeKeyBindings": [
    // file and directory
    { "before": ["<leader>", "e"], "commands": ["workbench.view.explorer"] },
    { "before": ["<leader>", "<leader>"], "commands": ["workbench.action.quickOpen"] },
    // problems and quickfix
    { "before": ["<leader>", "x", "q"], "commands": ["editor.action.quickFix"] },
    { "before": ["<leader>", "x", "x"], "commands": ["workbench.actions.view.problems"] },
    // buffer, tab and window
    { "before": ["<s-h>"], "commands": [":bprev"] },
    { "before": ["<s-l>"], "commands": [":bnext"] },
    { "before": ["[", "b"], "commands": [":bprev"] },
    { "before": ["]", "b"], "commands": [":bnext"] },
    { "before": ["<leader>", "b", "d"], "commands": [":bd"] },
    { "before": ["<leader>", "b", "o"], "commands": [":tabonly"] },
    { "before": ["<leader>", "-"], "commands": [":sp"] },
    { "before": ["<leader>", "|"], "commands": [":vsp"] },
    // terminal
    { "before": ["<c-/>"], "commands": ["workbench.action.terminal.toggleTerminal"] }
    // tricks and tips: from https://github.com/VSCodeVim/Vim?tab=readme-ov-file#-vscodevim-tricks
    // gd: go to definition
    // gh: show hover (just like K in lazyvim)
  ],
  "vim.smartRelativeLine": true,
  "vim.smartcase": true,
  "vim.useCtrlKeys": true,
  "vim.useSystemClipboard": true,
  "vim.visualModeKeyBindingsNonRecursive": [
    // paste without overriding the current register
    { "before": ["p"], "after": ["p", "g", "v", "y"] }
  ],
  "vim.visualstar": true,
  "workbench.activityBar.orientation": "vertical",
  "workbench.colorTheme": "Dracula Theme",
  "workbench.iconTheme": "material-icon-theme"
}
